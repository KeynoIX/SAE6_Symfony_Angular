{% extends '@EasyAdmin/layout.html.twig' %}

{% block content %}
	<h1>Mes séances à valider</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Date</th>
				<th>Sportifs</th>
				<th>Statut</th>
				<th>Appel</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for seance in seances %}
				<tr>
					<td>{{ seance.dateHeure|date('d/m/Y H:i') }}</td>
					<td>
						{% for sportif in seance.sportifs %}
							{{ sportif.prenom }}
							{{ sportif.nom }}<br>
						{% endfor %}
					</td>
					<td>
						{% if seance.statut == 'Validée' %}
							Validée
						{% else %}
							Prévue
						{% endif %}
					</td>
					<td>
						{% for sportif in seance.sportifs %}
							<div>
								{{ sportif.prenom }}
								{{ sportif.nom }}

								{% set participation = seance.participations|filter(p => p.sportif.id == sportif.id)|first %}
								{% if participation and participation.presence == 'présent' %}
									Présent
								{% else %}
									Absent
								{% endif %}

								<a href="{{ path('marquer_presence', { id: seance.id, sportifId: sportif.id, presence: 'présent' }) }}" class="btn btn-sm btn-success">
									Marquer Présent
								</a>
								<a href="{{ path('marquer_presence', { id: seance.id, sportifId: sportif.id, presence: 'absent' }) }}" class="btn btn-sm btn-danger">
									Marquer Absent
								</a>
							</div>
						{% endfor %}
					</td>
					<td>
						{% if seance.statut != 'Validée' %}
							<a href="{{ path('valider_seance', { id: seance.id }) }}" class="btn btn-primary">
								Valider Séance
							</a>
						{% else %}
							<span class="badge bg-success">Déjà validée</span>
						{% endif %}
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
