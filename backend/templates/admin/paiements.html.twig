{% extends '@EasyAdmin/layout.html.twig' %}

{% block content %}
	<table class="table">
		<thead>
			<tr>
				<th>Coach</th>
				<th>Nombre de séances validées</th>
				<th>Tarif horaire (€)</th>
				<th>Total dû (€)</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for paiement in paiements %}
				<tr>
					<td>{{ paiement.coach }}</td>
					<td>{{ paiement.seances_validees }}</td>
					<td>{{ paiement.tarif_horaire }}</td>
					<td>{{ paiement.total_du }}</td>
					<td>
						<a href="{{ path('paiement_pdf', { id: paiement.id, periode: 'Mars 2024' }) }}" class="btn btn-primary">
							Télécharger PDF
						</a>
					</td>

				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
